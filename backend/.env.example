# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production

# Database Configuration
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/almahra_ecommerce

# Redis Configuration (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Stripe Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration
# For Gmail, enable "App Passwords" in your Google Account settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security Configuration
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600

# Pagination
ITEMS_PER_PAGE=20

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# AR Service Configuration (Optional - for AR try-on feature)
AR_SERVICE_URL=http://localhost:5001
